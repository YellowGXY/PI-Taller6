{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar proyecto C",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-g",
        "main.c",
        "funciones.c",
        "funciones.h",
        "-o",
        "output/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
